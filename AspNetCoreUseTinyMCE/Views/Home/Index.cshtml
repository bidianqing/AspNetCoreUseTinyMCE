@{
    ViewData["Title"] = "Home Page";
}
@section Css{
    <link href="~/tinymce/plugins/codesample/css/prism.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/tinymce/tinymce.min.js"></script>

    <script src="~/tinymce/langs/zh_CN.js"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            language: 'zh_CN',
            plugins: "print code preview anchor hr image link codesample fullscreen insertdatetime lists media table textcolor colorpicker paste searchreplace emoticons help",
            // TinyMCE默认工具栏包含以下按钮
            //toolbar: 'undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | outdent indent',

            // 自己定义工具栏
            //toolbar: 'codesample | bold italic sizeselect fontselect fontsizeselect | hr alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | insertfile undo redo | forecolor backcolor emoticons | code',
            toolbar: 'undo redo | styleselect | bold italic fontselect forecolor | alignleft aligncenter alignright alignjustify | ' +
                'bullist numlist outdent indent | link image | print preview media fullpage | ' +
                'backcolor emoticons | help',
            paste_data_images: true,
            images_upload_url: '/home/Upload',
            color_picker_callback: function (callback, value) {
                callback('#FF00FF');
            }
        });
    </script>
}
<textarea id="mytextarea"></textarea>
